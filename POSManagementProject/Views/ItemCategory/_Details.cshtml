@model POSManagementProject.Models.ViewModels.ItemCategoryVM

<div class="row">
    <div class="col-md-12">
        @if (Model.Image != null)
        {
            <img src="data:image/jpg;base64,@Convert.ToBase64String(Model.Image)" class="img-responsive feature-image" width="150" height="150"/>
        }
        else
        {
            <img src="~/Images/product.png" class="img-responsive feature-image" width="150" height="150"/>
        }
    </div>
    <div class="col-md-12"><hr/></div>
    <div class="col-md-12">
        <div class="row" style="font-size: 1.2em">
            <div class="col-md-4" style="font-weight: bold">Name: </div>
            <div class="col-md-8"> @Model.Name </div>

            <div class="col-md-4" style="font-weight: bold">Code: </div>
            <div class="col-md-8">@Model.Code</div>
            @if(Model.Parent != null) { 
                <div class="col-md-4" style="font-weight: bold">Parent Category:</div>
                <div class="col-md-8">@Model.Parent.Name</div>
            }

            <div class="col-md-4" style="font-weight: bold">Description:</div>
            <div class="col-md-8">@Model.Description</div>
            
            <div class="col-md-4" style="font-weight: bold">Date: </div>
            <div class="col-md-8">@Model.Date</div>
        </div>
    </div>
</div>

