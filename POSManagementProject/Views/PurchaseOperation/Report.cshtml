@model POSManagementProject.Models.ViewModels.PurchaseOperationInformationVM
@{
    ViewBag.Title = "Report";
}

<h2>Purchase Report</h2>
<hr/>

@using (Html.BeginForm())
{ 

    <div class="row">
    <!---    <div class="col-md-3">
            @Html.Label("Branch", new { @class = "control-label" })<br/>
            @Html.DropDownList("BranchId", Model.SelectListBranch, new { @class = "form-control", @id = "branchId" })
        </div>-->
        <div class="col-md-3">
            @Html.Label("From Date", new { @class = "control-label" })<br />
            @Html.TextBox("FromDate", "", new { @class = "form-control datepicker", @id = "fromDate" })
        </div>
        <div class="col-md-3">
            @Html.Label("To Date", new { @class = "control-label" })<br />
            @Html.TextBox("ToDate", "", new { @class = "form-control datepicker", @id = "toDate" })
        </div>
        <div class="col-md-3">
            @Html.Label("Action", new { @class = "control-label" })<br />
            <div class="text-end">
                <input type="submit" class="btn btn-success w100" value="Show" onclick="return CheckReportValue()" />
                <!--- <input type="button" class="btn btn-primary w100" value="Export to Pdf" id="purchaseReportExportToPdf" />-->
            </div>
        </div>
    </div>
}
<br/><br/>
<div class="panel panel-primary">
    <div class="panel-heading"><h3 class="panel-title">Purchase Report</h3></div>
    <div class="panel-body">
        <table class="table table-striped table-hover table-bordered" id="purchaseReportTable">
            <thead>
            <tr>
                <th>@Html.Label("SL")</th>
                <th>@Html.Label("Date")</th>
             <!---   <th>@Html.Label("Branch")</th>-->
                <th>@Html.Label("Supplier")</th>
            <!---    <th>@Html.Label("Employee")</th>-->
                <th>@Html.Label("Purchase Total")</th>
                <th>@Html.Label("Action")</th>
            </tr>
            </thead>
            <tbody>
            @{ int sl = 0; double totalAmount = 0;}
            @foreach (var item in Model.PurchaseOpInfoList)
            {
                sl++;
                <tr>
                    <td>@Html.DisplayFor(modelItem => sl)</td>
                    <td>@Html.DisplayFor(modelItem => item.PurchaseDate)</td>
                <!---    <td>@Html.DisplayFor(modelItem => item.Branch.Address)</td>-->
                    <td>@Html.DisplayFor(modelItem => item.Supplier.Name)</td>
                 <!---   <td>@Html.DisplayFor(modelItem => item.Employee.Name)</td>-->
                    <td >@Html.DisplayFor(modelItem => item.TotalAmount)</td>
                    <td class="text-end">
                        <a class="btn btn-info btn-sm text-end" onclick="purchaseOpReportDetails(@item.Id)"
                           href='#'>
                            <i class="fa fa-eye fa-lg"></i>
                        </a>
                    </td>
                </tr>
                totalAmount += item.TotalAmount;
            }
            <tr>
                <td style="visibility: hidden; border: none">99999</td>
                <td style="border: none"></td>
                <td style="border: none"></td>
                <td style="border: none"></td>
                <td class="text-end" style="border: none">@Html.Label("Total Amount")</td>
                <td style="border: none">@totalAmount</td>
                <td style="border: none"></td>
            </tr>
            </tbody>
        </table>
    </div>
</div>

<!--Start Details Modal -->
<div class="modal fade" id="detailsModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="text-primary">Purchase Report Details</h3>
            </div>
            <div class="modal-body" id="detailsModalContent">
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-danger" data-dismiss="modal">Cancel</a>
            </div>
        </div>
    </div>
</div>
<!--End Details Modal -->



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="http://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script>
        $(function () {

            $(".datepicker").datepicker({
                changeMonth: true,
                changeYear: true,
                maxDate: '+1D'

            });

            $("#purchaseReportTable").DataTable();

        });
    </script>
    <script src="~/Scripts/Project/PurchaseOperation.js"></script>
}