@model POSManagementProject.Models.EntityModels.PurchaseOperationInformation

@{
    ViewBag.Title = "Result";
}

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-3">
                @Html.Label("Purchase No : ")
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.PurchaseNo)
            </div>
        </div>
      <!----  <div class="row">
            <div class="col-md-3">
                @Html.Label("Branch : ")
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.Branch.Address)
            </div>
        </div>-->
        <div class="row">
            <div class="col-md-3">
                @Html.Label("Supplier : ")
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.Supplier.Name)
            </div>
        </div>
       <!---- <div class="row">
            <div class="col-md-3">
                @Html.Label("Purchase By : ")
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.Employee.Name)
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                @Html.Label("Remarks : ")
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.Remarks)
            </div>
        </div>-->
        <div class="row">
            <div class="col-md-3">
                @Html.Label("Purchase Date : ")
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.PurchaseDate)
            </div>
        </div>

    </div>
    <div class="col-md-6"></div>
    <br /><br />

    <div class="col-md-12">
        <table class="table">

            <thead>
                <tr>
                    <th>@Html.Label("SL")</th>
                    <th>@Html.Label("Item")</th>
                    <th>@Html.Label("Qty")</th>
                    <th>@Html.Label("price")</th>
                    <th>@Html.Label("Line Total")</th>
                </tr>
            </thead>
            <tbody>
                @{ int sl = 0; }
                @foreach (var item in Model.PurchaseItems)
                {
                sl++;
                    <tr>
                        <td>@Html.DisplayFor(modelItem => sl)</td>
                        <td>@Html.DisplayFor(modelItem => item.Item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                        <td>@Html.DisplayFor(modelItem => item.LineTotal)</td>
                    </tr>
                }
                <tr style="border: 0">
                    <td colspan="2"></td>
                    <td colspan="2" class="text-end">@Html.Label("Total Amount")</td>
                    <td>@Html.DisplayFor(model => model.TotalAmount)</td>
                </tr>

            </tbody>
        </table>
    </div>
</div>

<div class="form-group">
    <div class="col-md-12 text-end">
        @Html.Hidden("Hidden", @Model.PurchaseNo, new { @id = "hiddenPurchaseNo" })
        <input type="button" value="Export To Pdf" class="btn btn-primary w100" onclick="purchaseOpExportToPdf()" />
        <input type="button" value="Cancel" class="btn btn-danger w100" id="redirectIndex" />
    </div>
</div>


@section scripts
{
    <script src="~/Scripts/Project/PurchaseOperation.js"></script>
}
